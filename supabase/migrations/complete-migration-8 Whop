-- ===============================================
-- PART 12: SUPABASE REALTIME FOR ADMIN DASHBOARD
-- ===============================================
-- Version: 1.1.0
-- Must run AFTER all other migrations
-- ===============================================

-- 12.1 Add profiles to Realtime publication (safe)
DO $$
BEGIN
  IF NOT EXISTS (
    SELECT 1 FROM pg_publication_tables 
    WHERE pubname = 'supabase_realtime' AND tablename = 'profiles'
  ) THEN
    ALTER PUBLICATION supabase_realtime ADD TABLE public.profiles;
    RAISE NOTICE 'âœ… Added profiles to supabase_realtime';
  ELSE
    RAISE NOTICE 'â„¹ï¸ profiles already in supabase_realtime';
  END IF;
END $$;

-- 12.2 Set REPLICA IDENTITY FULL (required for UPDATE old values)
DO $$
DECLARE
  v_current_identity CHAR(1);
BEGIN
  SELECT relreplident INTO v_current_identity 
  FROM pg_class WHERE relname = 'profiles';
  
  IF v_current_identity != 'f' THEN
    ALTER TABLE public.profiles REPLICA IDENTITY FULL;
    RAISE NOTICE 'âœ… Set REPLICA IDENTITY FULL on profiles';
  ELSE
    RAISE NOTICE 'â„¹ï¸ profiles already has REPLICA IDENTITY FULL';
  END IF;
END $$;

-- 12.3 Indexes for Realtime performance
CREATE INDEX IF NOT EXISTS idx_profiles_realtime_updates 
ON public.profiles(account_type, subscription_status, updated_at DESC);

-- 12.4 Verification
SELECT 'REALTIME SETUP' as check_type,
  CASE WHEN EXISTS (
    SELECT 1 FROM pg_publication_tables 
    WHERE pubname = 'supabase_realtime' AND tablename = 'profiles'
  ) THEN 'âœ… profiles in realtime' ELSE 'âŒ NOT in realtime' END as publication_status,
  CASE WHEN (SELECT relreplident FROM pg_class WHERE relname = 'profiles') = 'f' 
  THEN 'âœ… REPLICA IDENTITY FULL' ELSE 'âŒ NOT FULL' END as replica_identity;
