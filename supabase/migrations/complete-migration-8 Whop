-- Version: 3.0 - Newsletter is SEPARATE product
-- Newsletter subscription is independent of journal subscription!
-- ============================================


-- ----------------------------------------
-- 17.1 GET NEWSLETTER STATS (FIXED)
-- Counts users with NEWSLETTER subscription (not journal!)
-- ----------------------------------------

DROP FUNCTION IF EXISTS get_newsletter_stats();

CREATE OR REPLACE FUNCTION get_newsletter_stats()
RETURNS TABLE (
  total_subscribers BIGINT,
  active_subscribers BIGINT,
  trial_subscribers BIGINT,
  cancelled_subscribers BIGINT,
  total_users BIGINT
)
LANGUAGE plpgsql
STABLE
SECURITY DEFINER
AS $$
BEGIN
  RETURN QUERY
  SELECT 
    -- Total with any newsletter subscription (active or trial)
    COUNT(*) FILTER (
      WHERE p.newsletter_status IN ('active', 'trial')
    ) as total_subscribers,
    
    -- Active (paid) newsletter subscribers
    COUNT(*) FILTER (
      WHERE p.newsletter_status = 'active'
    ) as active_subscribers,
    
    -- In trial period
    COUNT(*) FILTER (
      WHERE p.newsletter_status = 'trial'
    ) as trial_subscribers,
    
    -- Cancelled
    COUNT(*) FILTER (
      WHERE p.newsletter_status = 'cancelled'
    ) as cancelled_subscribers,
    
    -- Total users
    COUNT(*) as total_users
  FROM profiles p
  WHERE p.email IS NOT NULL;
END;
$$;


-- ----------------------------------------
-- 17.2 GET NEWSLETTER USERS (FIXED)
-- Returns users with their NEWSLETTER subscription status
-- Completely independent of journal subscription!
-- ----------------------------------------

DROP FUNCTION IF EXISTS get_newsletter_users();

CREATE OR REPLACE FUNCTION get_newsletter_users()
RETURNS TABLE (
  id UUID,
  email TEXT,
  display_name TEXT,
  account_type TEXT,
  newsletter_enabled BOOLEAN,
  newsletter_status TEXT,
  newsletter_started_at TIMESTAMPTZ,
  newsletter_expires_at TIMESTAMPTZ,
  newsletter_trial_ends_at TIMESTAMPTZ,
  created_at TIMESTAMPTZ
)
LANGUAGE plpgsql
STABLE
SECURITY DEFINER
AS $$
BEGIN
  RETURN QUERY
  SELECT 
    p.id,
    p.email,
    COALESCE(p.display_name, p.full_name) as display_name,
    COALESCE(p.account_type, 'free')::TEXT as account_type,
    -- Newsletter subscription (SEPARATE from journal!)
    COALESCE(p.newsletter_enabled, FALSE) as newsletter_enabled,
    COALESCE(p.newsletter_status, 'inactive')::TEXT as newsletter_status,
    p.newsletter_started_at,
    p.newsletter_expires_at,
    p.newsletter_trial_ends_at,
    p.created_at
  FROM profiles p
  WHERE p.email IS NOT NULL
  ORDER BY 
    -- Newsletter subscribers first
    CASE p.newsletter_status 
      WHEN 'active' THEN 1 
      WHEN 'trial' THEN 2 
      WHEN 'cancelled' THEN 3
      ELSE 4 
    END,
    p.created_at DESC;
END;
$$;


-- ----------------------------------------
-- 17.3 TOGGLE NEWSLETTER STATUS (FIXED)
-- Admin can manually toggle newsletter for any user
-- No account_type restriction!
-- ----------------------------------------

DROP FUNCTION IF EXISTS toggle_newsletter_status(UUID, BOOLEAN);

CREATE OR REPLACE FUNCTION toggle_newsletter_status(
  p_user_id UUID,
  p_enabled BOOLEAN
)
RETURNS JSONB
LANGUAGE plpgsql
SECURITY DEFINER
AS $$
DECLARE
  v_email TEXT;
  v_current_status TEXT;
BEGIN
  -- Get user info
  SELECT email, newsletter_status
  INTO v_email, v_current_status
  FROM profiles 
  WHERE id = p_user_id;
  
  IF v_email IS NULL THEN
    RETURN jsonb_build_object(
      'success', false, 
      'error', 'User not found'
    );
  END IF;
  
  -- Update newsletter status
  UPDATE profiles 
  SET 
    newsletter_enabled = p_enabled,
    newsletter_status = CASE 
      WHEN p_enabled THEN 'active'  -- Admin manually enabling = active
      ELSE 'inactive'
    END,
    newsletter_started_at = CASE 
      WHEN p_enabled AND newsletter_started_at IS NULL THEN NOW()
      ELSE newsletter_started_at
    END,
    updated_at = NOW()
  WHERE id = p_user_id;
  
  RETURN jsonb_build_object(
    'success', true,
    'user_id', p_user_id,
    'email', v_email,
    'newsletter_enabled', p_enabled,
    'previous_status', v_current_status
  );
END;
$$;


-- ----------------------------------------
-- 17.4 GRANTS
-- ----------------------------------------

GRANT EXECUTE ON FUNCTION get_newsletter_stats() TO authenticated;
GRANT EXECUTE ON FUNCTION get_newsletter_users() TO authenticated;
GRANT EXECUTE ON FUNCTION toggle_newsletter_status(UUID, BOOLEAN) TO authenticated;


-- ----------------------------------------
-- 17.5 VERIFICATION
-- ----------------------------------------

SELECT '========== NEWSLETTER ADMIN RPC (v3.0 - SEPARATE PRODUCT) ==========' as section;

SELECT 'NEWSLETTER RPC FUNCTIONS' as check_type,
  CASE WHEN EXISTS (SELECT 1 FROM pg_proc WHERE proname = 'get_newsletter_stats') THEN 'âœ…' ELSE 'âŒ' END as get_newsletter_stats,
  CASE WHEN EXISTS (SELECT 1 FROM pg_proc WHERE proname = 'get_newsletter_users') THEN 'âœ…' ELSE 'âŒ' END as get_newsletter_users,
  CASE WHEN EXISTS (SELECT 1 FROM pg_proc WHERE proname = 'toggle_newsletter_status') THEN 'âœ…' ELSE 'âŒ' END as toggle_newsletter_status;

-- Show current stats
SELECT 'CURRENT NEWSLETTER STATS' as info, * FROM get_newsletter_stats();

-- Show newsletter status breakdown
SELECT 
  'NEWSLETTER STATUS BREAKDOWN' as info,
  COALESCE(newsletter_status, 'inactive') as status,
  COUNT(*) as count
FROM profiles 
WHERE email IS NOT NULL
GROUP BY COALESCE(newsletter_status, 'inactive')
ORDER BY count DESC;

-- ============================================
-- PART 18: NEWSLETTER SEND LOGS
-- ============================================
-- Version: 1.0.0
-- Tracks newsletter send history for admin dashboard
-- ============================================

-- ----------------------------------------
-- 18.1 NEWSLETTER_SEND_LOGS TABLE
-- ----------------------------------------

CREATE TABLE IF NOT EXISTS newsletter_send_logs (
  id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
  sent_at TIMESTAMPTZ DEFAULT NOW(),
  subject TEXT NOT NULL,
  recipient_count INTEGER NOT NULL,
  segments TEXT[] DEFAULT '{}',
  admin_note TEXT,
  sent_by UUID REFERENCES auth.users(id),
  metadata JSONB DEFAULT '{}',
  created_at TIMESTAMPTZ DEFAULT NOW()
);

COMMENT ON TABLE newsletter_send_logs IS 'Tracks all newsletter sends for admin dashboard';
COMMENT ON COLUMN newsletter_send_logs.segments IS 'Array of audience segments: newsletter_active, newsletter_trial, journal_basic, journal_premium';
COMMENT ON COLUMN newsletter_send_logs.admin_note IS 'Optional admin note that was included in the email';


-- ----------------------------------------
-- 18.2 INDEXES
-- ----------------------------------------

CREATE INDEX IF NOT EXISTS idx_newsletter_send_logs_sent_at 
ON newsletter_send_logs(sent_at DESC);

CREATE INDEX IF NOT EXISTS idx_newsletter_send_logs_sent_by 
ON newsletter_send_logs(sent_by);


-- ----------------------------------------
-- 18.3 RLS POLICIES
-- ----------------------------------------

ALTER TABLE newsletter_send_logs ENABLE ROW LEVEL SECURITY;

-- Admins can read all send logs
DROP POLICY IF EXISTS "Admins can read newsletter send logs" ON newsletter_send_logs;
CREATE POLICY "Admins can read newsletter send logs" ON newsletter_send_logs
  FOR SELECT USING (
    EXISTS (
      SELECT 1 FROM profiles 
      WHERE profiles.id = auth.uid() 
      AND profiles.role IN ('admin', 'super_admin')
    )
  );

-- Service role can insert (from Edge Function)
DROP POLICY IF EXISTS "Service role can insert newsletter send logs" ON newsletter_send_logs;
CREATE POLICY "Service role can insert newsletter send logs" ON newsletter_send_logs
  FOR INSERT WITH CHECK (TRUE);

-- Service role full access
DROP POLICY IF EXISTS "Service role full access to newsletter send logs" ON newsletter_send_logs;
CREATE POLICY "Service role full access to newsletter send logs" ON newsletter_send_logs
  FOR ALL USING (auth.role() = 'service_role');


-- ----------------------------------------
-- 18.4 GRANTS
-- ----------------------------------------

GRANT SELECT ON newsletter_send_logs TO authenticated;
GRANT ALL ON newsletter_send_logs TO service_role;


-- ----------------------------------------
-- 18.5 VERIFICATION
-- ----------------------------------------

SELECT '========== NEWSLETTER SEND LOGS ==========' as section;

SELECT 
  'NEWSLETTER_SEND_LOGS TABLE' as check_type,
  CASE WHEN EXISTS (SELECT 1 FROM pg_tables WHERE tablename = 'newsletter_send_logs') 
    THEN 'âœ… Created' ELSE 'âŒ Missing' END as status;

SELECT 
  'INDEXES' as check_type,
  CASE WHEN EXISTS (SELECT 1 FROM pg_indexes WHERE indexname = 'idx_newsletter_send_logs_sent_at') 
    THEN 'âœ…' ELSE 'âŒ' END as sent_at_index,
  CASE WHEN EXISTS (SELECT 1 FROM pg_indexes WHERE indexname = 'idx_newsletter_send_logs_sent_by') 
    THEN 'âœ…' ELSE 'âŒ' END as sent_by_index;
