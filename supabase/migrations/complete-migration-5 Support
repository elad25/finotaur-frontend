-- Show user group counts
SELECT * FROM get_user_group_counts();

-- Show admin stats
SELECT * FROM get_admin_user_stats();

-- Show churned users (if any)
SELECT 
  email,
  display_name,
  account_type,
  user_group,
  reason,
  churned_at::date as churned_date,
  had_top_secret,
  had_newsletter
FROM churned_users
ORDER BY churned_at DESC
LIMIT 10;

